<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Verify progress -->
    <ProgressBar
        android:id="@+id/verify_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/verify_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <FrameLayout
            android:layout_width="410dp"
            android:layout_height="207dp">

            <LinearLayout
                android:id="@+id/verify_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/greenbox"
                    android:layout_width="match_parent"
                    android:layout_height="207dp"
                    android:background="#3DCE2C"
                    android:clickable="false"
                    android:padding="0dp"
                    android:visibility="visible">


                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="300dp"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:textColor="#000000"
                        tools:text="fdsafea" />
                </android.support.design.widget.TextInputLayout>


                <Button
                    android:id="@+id/verify_button"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="210dp"
                    android:background="#94E38A"
                    android:text="@string/verify"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    tools:text="送信" />

            </LinearLayout>

            <TextView
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center_horizontal"
                android:paddingTop="70dp"
                android:text="認証コード入力"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:typeface="normal"
                app:fontFamily="@font/noto_sans" />
        </FrameLayout>
    </ScrollView>

</RelativeLayout>