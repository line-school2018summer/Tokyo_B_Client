<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Verify progress -->
    <ProgressBar
        android:id="@+id/verify_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/verify_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <FrameLayout
            android:layout_width="410dp"
            android:layout_height="207dp">

        </FrameLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/verify_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/greenbox"
            android:layout_width="match_parent"
            android:layout_height="207dp"
            android:background="#3DCE2C"
            android:clickable="false"
            android:visibility="visible">


            <TextView
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_horizontal"
                android:paddingTop="70dp"
                android:text="認証コード入力"
                android:textColor="#FFFFFF"
                android:textSize="40sp"
                android:typeface="normal"
                app:fontFamily="@font/noto_sans" />
        </android.support.design.widget.TextInputLayout>


        <TextView
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:clickable="false"
            android:editable="false"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="textMultiLine"
            android:paddingTop="30dp"
            android:text="ご登録の際に入力されたemailアドレスに届いた
4桁の認証コードを入力してください。
有効時間は30分です。"
            android:textColor="#46B739" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/code"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/layout_border"
            android:gravity="center_horizontal"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:maxLines="1"
            android:textColor="#3DCE2C"
            android:textSize="100sp"
            android:visibility="visible"
            tools:text="12323" />

        <Button
            android:id="@+id/verify_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="0dp"
            android:background="#94E38A"
            android:text="@string/verify"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            tools:text="送信" />

    </LinearLayout>

</RelativeLayout>